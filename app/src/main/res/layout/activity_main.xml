<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_zerro_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/foodcourt_cyan_500"
    android:orientation="vertical" tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_vertical_margin">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity monitoring"
                android:id="@+id/button_monitoring"
                android:background="@drawable/custom_btn"
                android:textColor="@color/foodcourt_cyan_700" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Localization"
                android:id="@+id/button_localization"
                android:background="@drawable/custom_btn"
                android:textColor="@color/foodcourt_cyan_700" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accelerometer"
                android:id="@+id/button_accelerometer"
                android:background="@drawable/custom_btn"
                android:textColor="@color/foodcourt_cyan_700"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Graphs Alexander"
                android:id="@+id/button_graphs_alexander"
                android:background="@drawable/custom_btn"
                android:textColor="@color/foodcourt_cyan_700" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Graphs Joost"
                android:id="@+id/button_graphs_joost"
                android:background="@drawable/custom_btn"
                android:textColor="@color/foodcourt_cyan_700" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Graphs"
                android:id="@+id/button_graphs"
                android:background="@drawable/custom_btn"
                android:textColor="@color/foodcourt_cyan_700" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete file"
                android:id="@+id/button_delete_file"
                android:background="@drawable/custom_btn"
                android:textColor="@color/foodcourt_cyan_700" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wifi Scan"
                android:id="@+id/button_wifi_scan_activity"
                android:background="@drawable/custom_btn"
                android:textColor="@color/foodcourt_cyan_700" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bluetooth Scan"
                android:id="@+id/button_bluetooth_scan_activity"
                android:background="@drawable/custom_btn"
                android:textColor="@color/foodcourt_cyan_700" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map"
                android:id="@+id/button_map_activity"
                android:background="@drawable/custom_btn"
                android:textColor="@color/foodcourt_cyan_700" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Combined"
                android:id="@+id/button_combined_activity"
                android:background="@drawable/custom_btn"
                android:textColor="@color/foodcourt_cyan_700" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Magnetic Joost"
                android:id="@+id/button_magnetic_joost_activity"
                android:background="@drawable/custom_btn"
                android:textColor="@color/foodcourt_cyan_700" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Queuing"
                android:id="@+id/button_queuing_activity"
                android:background="@drawable/custom_btn"
                android:textColor="@color/foodcourt_cyan_700" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
