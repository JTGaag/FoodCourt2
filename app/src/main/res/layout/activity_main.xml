<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical" tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accelerometer"
                android:id="@+id/button_accelerometer" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Graphs Alexander"
                android:id="@+id/button_graphs_alexander" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Graphs Joost"
                android:id="@+id/button_graphs_joost" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Graphs"
                android:id="@+id/button_graphs" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete file"
                android:id="@+id/button_delete_file" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wifi Scan"
                android:id="@+id/button_wifi_scan_activity" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bluetooth Scan"
                android:id="@+id/button_bluetooth_scan_activity" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map"
                android:id="@+id/button_map_activity" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Combined"
                android:id="@+id/button_combined_activity" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Magnetic Joost"
                android:id="@+id/button_magnetic_joost_activity" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Queuing"
                android:id="@+id/button_queuing_activity" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
