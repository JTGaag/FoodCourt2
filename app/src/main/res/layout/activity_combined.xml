<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/foodcourt_cyan_500"
    tools:context="com.aj.foodcourt2.CombinedActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="32dp"
        android:paddingRight="32dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="@string/hello_world"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_azimut"
                    android:layout_gravity="left"
                    android:layout_weight="1"/>

                <TextView android:text="@string/hello_world"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_azimut_degrees"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="@string/hello_world"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_steps"
                    android:layout_gravity="left"
                    android:layout_weight="1"/>

                <TextView android:text="@string/hello_world"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_step_mode"
                    android:gravity="right"/>
            </LinearLayout>



            <com.aj.map.TouchImageView
                android:id="@+id/floor_map_zoom"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/foodcourt_white"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:ems="10"
                android:id="@+id/editText_direction_combined"
                android:hint="Direction"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:ems="10"
                android:id="@+id/editText_distance_combined"
                android:hint="Distance"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motion Det"
                    android:id="@+id/button_motion_detection"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/custom_btn"
                    android:textColor="@color/foodcourt_cyan_700" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Move"
                    android:id="@+id/button_move_combined"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/custom_btn"
                    android:textColor="@color/foodcourt_cyan_700" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Backtrack"
                    android:id="@+id/button_backtrack"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/custom_btn"
                    android:textColor="@color/foodcourt_cyan_700" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:id="@+id/button_step_start"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/custom_btn"
                    android:textColor="@color/foodcourt_cyan_700" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get WiFi Data"
                    android:id="@+id/button_get_wifi_data"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/custom_btn"
                    android:textColor="@color/foodcourt_cyan_700" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stop"
                    android:id="@+id/button_step_stop"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/custom_btn"
                    android:textColor="@color/foodcourt_cyan_700" />
            </LinearLayout>

            <TextView android:text="@string/hello_world"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_wifi_data"/>


        </LinearLayout>

    </ScrollView>



</LinearLayout>
